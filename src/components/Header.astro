---
import logo from '../assets/logos/Logo.svg';
import whatsappIcon from '../assets/icons/whatsapp.svg';

// Enlaces de navegación
const navItems = [
  { href: '#inicio', label: 'Inicio' },
  { href: '#servicios', label: 'Servicios' },
  { href: '#tecnologias', label: 'Tecnologías' },
  { href: '#precios', label: 'Precios' },
  { href: '#testimonios', label: 'Testimonios' },
  { href: '#contacto', label: 'Contacto' }
];

// WhatsApp
const whatsappNumber = '+573144595579';
const whatsappMessage = 'Hola, me interesa conocer más sobre sus servicios.';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<!-- Header con Menú Móvil Básico -->
<header class="bg-gray-900 fixed w-full top-0 left-0 right-0 z-50 shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="#inicio" class="flex items-center">
        <img src={logo.src} alt="OceanicWeb Logo" class="h-6 w-auto" />
      </a>

      <!-- Navegación visible solo en desktop -->
      <div class="hidden md:flex items-center space-x-6 ">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-gray-300 hover:text-tech-green text-md "
          >
            {item.label}
          </a>
        ))}
        
        <!-- Botón WhatsApp desktop -->
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 bg-green-600 text-white px-4 py-2 rounded-lg ml-2"
        >
          <img src={whatsappIcon.src} alt="WhatsApp" class="w-5 h-5" />
          <span>WhatsApp</span>
        </a>
      </div>

      <!-- Botones móvil -->
      <div class="flex items-center md:hidden">
        <!-- Botón WhatsApp móvil -->
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center w-10 h-10 bg-green-600 rounded-full mr-2"
        >
          <img src={whatsappIcon.src} alt="WhatsApp" class="w-5 h-5" />
        </a>
        
        <!-- Botón hamburguesa para abrir menu -->
        <button 
          onclick="document.getElementById('menu-mobile').style.display='block'; document.body.style.overflow='hidden';"
          type="button"
          class="w-10 h-10 flex flex-col justify-center items-center cursor-pointer"
          aria-label="Abrir menú"
        >
          <span class="w-6 h-0.5 bg-white block mb-1.5"></span>
          <span class="w-6 h-0.5 bg-white block"></span>
          <span class="w-6 h-0.5 bg-white block mt-1.5"></span>
        </button>
      </div>
    </div>
  </div>
</header>

<!-- Menú móvil como overlay -->
<div id="menu-mobile" style="display:none;" class="fixed inset-0 bg-gray-900 z-[100]">
  <div class="container mx-auto px-4 py-4 h-full">
    <!-- Cabecera del menú con botón cerrar -->
    <div class="flex justify-between items-center mb-8">
      <!-- Logo -->
      <a href="#inicio" class="flex items-center">
        <img src={logo.src} alt="OceanicWeb Logo" class="h-5 w-auto" />
      </a>
      
      <!-- Botón cerrar -->
      <button 
        onclick="document.getElementById('menu-mobile').style.display='none'; document.body.style.overflow='';"
        type="button"
        class="w-10 h-10 flex justify-center items-center"
        aria-label="Cerrar menú"
      >
        <span class="w-6 h-0.5 bg-white block rotate-45 absolute"></span>
        <span class="w-6 h-0.5 bg-white block -rotate-45 absolute"></span>
      </button>
    </div>
    
    <!-- Enlaces del menú -->
    <div class="flex flex-col space-y-6">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-center text-gray-300 hover:text-tech-green py-3 border-b border-gray-700 text-xl"
          onclick="document.getElementById('menu-mobile').style.display='none'; document.body.style.overflow='';"
        >
          {item.label}
        </a>
      ))}
      
      <!-- Botón WhatsApp dentro del menú -->
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 bg-green-600 text-white px-4 py-3 rounded-lg mt-8 mx-auto"
      >
        <img src={whatsappIcon.src} alt="WhatsApp" class="w-5 h-5" />
        <span>Contactar por WhatsApp</span>
      </a>
    </div>
  </div>
</div> 
---
const servicios = [
  {
    titulo: 'Desarrollo Web',
    descripcion: 'Creamos sitios web modernos y responsivos que destacan tu marca y proporcionan una excelente experiencia de usuario.',
    icono: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
      </svg>`
  },
  {
    titulo: 'Aplicaciones Móviles',
    descripcion: 'Desarrollamos aplicaciones móviles nativas y multiplataforma que conectan con tus usuarios donde estén.',
    icono: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
      </svg>`
  },
  {
    titulo: 'E-commerce',
    descripcion: 'Implementamos soluciones de comercio electrónico que impulsan tus ventas y optimizan la experiencia de compra.',
    icono: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>`
  },
  {
    titulo: 'Consultoría IT',
    descripcion: 'Asesoramos en la implementación de soluciones tecnológicas y optimización de procesos empresariales.',
    icono: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>`
  },
];
---

<section id="servicios" class="py-20 bg-deep-black">
  <div class="container">
    <h2 class="section-title">Nuestros Servicios</h2>
    <p class="section-subtitle">
      Soluciones tecnológicas integrales para impulsar tu negocio
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {servicios.map((servicio) => (
        <div class="group p-6 bg-gray-900 rounded-lg hover:bg-gray-800 transition-colors duration-300">
          <div class="text-tech-green mb-4 group-hover:scale-110 transition-transform duration-300" set:html={servicio.icono} />
          <h3 class="text-xl font-semibold mb-2">{servicio.titulo}</h3>
          <p class="text-gray-400">{servicio.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section> 